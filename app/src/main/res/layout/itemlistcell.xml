<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="160dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Location Found:"
        android:id="@+id/locationLabel"
        android:textColor="#000000"
        android:textSize="20dp"
        android:padding="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Found Date:"
        android:id="@+id/dateLabel"
        android:textColor="#000000"
        android:textSize="20dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the location it was found."
        android:id="@+id/location"
        android:layout_below="@+id/locationLabel"
        android:layout_toRightOf="@+id/dateLabel"
        android:layout_toEndOf="@+id/dateLabel"
        android:textColor="#4c4c4c"
        android:textSize="17dp"
        android:padding="2dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This is the date it was found"
        android:id="@+id/date"
        android:layout_below="@+id/dateLabel"
        android:layout_toRightOf="@+id/dateLabel"
        android:layout_toEndOf="@+id/dateLabel"
        android:textColor="#4c4c4c"
        android:textSize="17dp"
        android:padding="2dp" />
</RelativeLayout>